#!/usr/bin/make -f

VERSION=$(shell dpkg-parsechangelog |grep ^Version:|cut -d ' ' -f 2)

%:
	dh $@ --with dkms

override_dh_auto_build:

override_dh_auto_clean:

override_dh_install:
	dh_install Makefile sbae5_color.c sbae5_color.h led_data.h usr/src/sbae5-color-$(VERSION)/
	dh_install sbae5-color.conf usr/lib/modules-load.d/
	dh_install 50-sbae-color.rules etc/udev/rules.d/

override_dh_dkms:
	dh_dkms -V $(VERSION)
